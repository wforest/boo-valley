<wpml-config>

	<admin-texts>
		<key name="theme_mods_boo-valley">
			<key name="texts_site_info" />
		</key>
	</admin-texts>

	<custom-fields>
		<custom-field action="copy">show_intro_widgets</custom-field>
		<custom-field action="copy">no_intro</custom-field>
		<custom-field action="copy">intro_image</custom-field>
		<custom-field action="copy">layout_no_paddings</custom-field>
		<custom-field action="copy">layout_stretched</custom-field>
		<custom-field action="copy">no_thumbnail</custom-field>
		<custom-field action="translate">quote_source</custom-field>
	</custom-fields>

</wpml-config>
